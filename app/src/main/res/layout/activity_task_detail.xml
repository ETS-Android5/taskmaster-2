<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TaskDetailActivity">

  <Button
      android:id="@+id/buttonDeleteTaskOnTaskDetailPage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="72dp"
      android:layout_marginTop="48dp"
      android:text="@string/delete_task"
      app:layout_constraintStart_toEndOf="@+id/buttonEditTaskViewTask"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textViewTaskTitleTaskDetailActivity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="172dp"
      android:text="@string/task_title_task_detail_activity"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.501"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textViewBodyOnTaskDetailActivity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="88dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.467"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewTaskTitleTaskDetailActivity" />

  <TextView
      android:id="@+id/textViewStateOnTaskDetailActivity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="124dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.467"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewBodyOnTaskDetailActivity" />

  <ImageView
      android:id="@+id/imageViewImageAddTaskActivity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:contentDescription="@string/imagetaskdetailpage"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewStateOnTaskDetailActivity"
      tools:ignore="ImageContrastCheck"
      tools:srcCompat="@tools:sample/avatars" />

  <Button
      android:id="@+id/buttonEditTaskViewTask"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginTop="48dp"
      android:text="@string/edit_task"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>